<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
    
    <FrameLayout 
        android:layout_weight="0.1"
	    android:layout_height="0dp"
        android:layout_width="wrap_content">
        
        <LinearLayout
            android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:weightSum="2"
	        android:orientation="horizontal">
        	
            <LinearLayout
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:background="#e7e7e7"
                ></LinearLayout>
            
            <LinearLayout
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:background="#efefef"
                ></LinearLayout>
            
        </LinearLayout>
        
        <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent">
        
	        <TextView
		        android:id="@+id/txtTimer"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_alignParentLeft="true"
		        android:layout_toLeftOf="@+id/btnPause"
		        android:gravity="center"
		        android:textColor="#4dcfd0"
		        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:text="00:00" />
	        
	        <TextView
		        android:id="@+id/txtBonusTime"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_alignParentLeft="true"
		        android:layout_toLeftOf="@+id/btnPause"
		        android:gravity="bottom|right"
		        android:textColor="#Ca244b"
		        android:visibility="invisible"
		        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:text="+60" />
	        
	        <Button 
	            android:id="@+id/btnPause"
	            android:layout_width="wrap_content" 
	        	android:layout_height="wrap_content"
	        	android:background="@drawable/pause_selector"
	        	android:layout_centerInParent="true"
	        	android:onClick="clickPause"
	        	/> 
	       
	        <TextView
		        android:id="@+id/txtScore"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_alignParentRight="true"
		        android:layout_toRightOf="@+id/btnPause"
		        android:gravity="center"
		        android:textColor="#4dcfd0"
		        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:maxLines="1"
		        android:text="Score: 0" />
    
    	</RelativeLayout>
        
     </FrameLayout>
    
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.60"
        android:weightSum="3">

        <TableRow 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="3">
        	<Button 
        	    android:layout_width="wrap_content" 
        	    android:layout_height="match_parent" 
        	    android:layout_weight="1"
        	    android:text="1"
        	    android:textColor="#FFFFFF"
        	    android:textAppearance="?android:attr/textAppearanceLarge"
        	    android:gravity="right"
        	    android:paddingRight="12dp"
        	    android:paddingTop="6dp"
        	    android:background="@drawable/orange_bone_orange"
        	    android:layout_margin="1dp"/>
        	<Button 
        	    android:layout_width="wrap_content" 
        	    android:layout_height="match_parent" 
        	    android:layout_weight="1"
        	    android:text="2"
        	    android:textColor="#FFFFFF"
        	    android:textAppearance="?android:attr/textAppearanceLarge"
        	    android:gravity="right"
        	    android:paddingRight="12dp"
        	    android:paddingTop="6dp"
        	    android:background="@drawable/orange_bone_orange"
        	    android:layout_margin="1dp"/>
        	<Button 
        	    android:layout_width="wrap_content" 
        	    android:layout_height="match_parent" 
        	    android:layout_weight="1"
        	    android:text="3"
        	    android:textColor="#FFFFFF"
        	    android:textAppearance="?android:attr/textAppearanceLarge"
        	    android:gravity="right"
        	    android:paddingRight="12dp"
        	    android:paddingTop="6dp"
        	    android:background="@drawable/orange_bone_orange"
        	    android:layout_margin="1dp"/> 
        </TableRow>
        <TableRow 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="3">
        	<Button 
        	    android:layout_width="wrap_content" 
        	    android:layout_height="match_parent" 
        	    android:layout_weight="1"
        	    android:text="4"
        	    android:textColor="#FFFFFF"
        	    android:textAppearance="?android:attr/textAppearanceLarge"
        	    android:gravity="right"
        	    android:paddingRight="12dp"
        	    android:paddingTop="6dp"
        	    android:background="@drawable/orange_bone_orange"
        	    android:layout_margin="1dp"/>
        	<Button 
        	    android:layout_width="wrap_content" 
        	    android:layout_height="match_parent" 
        	    android:layout_weight="1"
        	    android:text="5"
        	    android:textColor="#FFFFFF"
        	    android:textAppearance="?android:attr/textAppearanceLarge"
        	    android:gravity="right"
        	    android:paddingRight="12dp"
        	    android:paddingTop="6dp"
        	    android:background="@drawable/orange_bone_orange"
        	    android:layout_margin="1dp"/>
        	<Button 
        	    android:layout_width="wrap_content" 
        	    android:layout_height="match_parent" 
        	    android:layout_weight="1"
        	    android:text="6"
        	    android:textColor="#FFFFFF"
        	    android:textAppearance="?android:attr/textAppearanceLarge"
        	    android:gravity="right"
        	    android:paddingRight="12dp"
        	    android:paddingTop="6dp"
        	    android:background="@drawable/orange_bone_orange"
        	    android:layout_margin="1dp"/> 
        </TableRow>
        <TableRow 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="3">
        	<Button 
        	    android:layout_width="wrap_content" 
        	    android:layout_height="match_parent" 
        	    android:layout_weight="1"
        	    android:text="7"
        	    android:textColor="#FFFFFF"
        	    android:textAppearance="?android:attr/textAppearanceLarge"
        	    android:gravity="right"
        	    android:paddingRight="12dp"
        	    android:paddingTop="6dp"
        	    android:background="@drawable/orange_bone_orange"
        	    android:layout_margin="1dp"/>
        	<Button 
        	    android:layout_width="wrap_content" 
        	    android:layout_height="match_parent" 
        	    android:layout_weight="1"
        	    android:text="8"
        	    android:textColor="#FFFFFF"
        	    android:textAppearance="?android:attr/textAppearanceLarge"
        	    android:gravity="right"
        	    android:paddingRight="12dp"
        	    android:paddingTop="6dp"
        	    android:background="@drawable/orange_bone_orange"
        	    android:layout_margin="1dp"/>
        	<Button 
        	    android:layout_width="wrap_content" 
        	    android:layout_height="match_parent" 
        	    android:layout_weight="1"
        	    android:text="9"
        	    android:textColor="#FFFFFF"
        	    android:textAppearance="?android:attr/textAppearanceLarge"
        	    android:gravity="right"
        	    android:paddingRight="12dp"
        	    android:paddingTop="6dp"
        	    android:background="@drawable/orange_bone_orange"
        	    android:layout_margin="1dp"/> 
        </TableRow>
    </TableLayout>

    
    <FrameLayout 
        android:layout_weight="0.3"
	    android:layout_height="0dp"
        android:layout_width="wrap_content">
        
        <LinearLayout
            android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:weightSum="2"
	        android:orientation="horizontal">
        	
            <LinearLayout
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:background="#e7e7e7"
                ></LinearLayout>
            
            <LinearLayout
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:background="#efefef"
                ></LinearLayout>
            
        </LinearLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <GridView
		        android:id="@+id/lstViewAnswersSolved"
		        android:numColumns="2"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:padding="8dp"
		        android:fadeScrollbars="false"
		        android:layout_above="@+id/adView"/>
        
            <com.google.android.gms.ads.AdView
		        android:id="@+id/adView"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        ads:adSize="SMART_BANNER"
		        android:layout_alignParentBottom="true"
		        ads:adUnitId="@string/banner_ad_unit_id">
		    </com.google.android.gms.ads.AdView>
            
            
        </RelativeLayout>
        
     </FrameLayout>

    
    

    
</LinearLayout>
