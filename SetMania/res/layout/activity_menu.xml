<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">
            
    
    	<ToggleButton
            android:id="@+id/btn_music"
            android:textOff=""
            android:textOn=""
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
            android:background="@drawable/music_selector"
            android:onClick="clickMusic" />
    
       	<LinearLayout 
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_centerInParent="true"
	        android:orientation="vertical">
           
       	    <RelativeLayout 
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_gravity="center"
		    	android:gravity="center"
		    	android:layout_marginTop="120dp"
		    	android:layout_marginBottom="16dp">
	        
       	        	<View android:id="@+id/strut"
				        android:layout_width="0dp"
				        android:layout_height="0dp" 
				        android:layout_centerHorizontal="true"/>
       	        
        	        <Button
				        android:id="@+id/btn_help"
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:onClick="clickHelp"
				        android:layout_alignRight="@id/strut"
        				android:layout_alignParentLeft="true"
				        android:layout_margin="8dp"
				        android:background="@drawable/help_selector" />
		        
				    <Button
				        android:id="@+id/btn_highscore"
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:onClick="clickHighScore"
				        android:layout_alignLeft="@id/strut"
        				android:layout_alignParentRight="true"
				        android:layout_margin="8dp"	
				        android:background="@drawable/highscore_selector"/>
       	        
       	        </RelativeLayout>
       	    
       	        <Button
		            android:id="@+id/btn_play"
		            android:layout_width="wrap_content"
		            android:layout_gravity="center"
		            android:layout_height="wrap_content"
		            android:layout_margin="8dp"
		            android:background="@drawable/play_selector"
		            android:onClick="clickPlay" />
       
       </LinearLayout>
       	
    <com.google.android.gms.ads.AdView
	        android:id="@+id/adView"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        ads:adSize="SMART_BANNER"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
        
	        
</RelativeLayout>
